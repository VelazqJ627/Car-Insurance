
@{
    ViewBag.Title = "InsertReportForm";
}
<div class="container">
<form action="InsertReport" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col s12 ">
            <ul class="tabs blue-text">
                <li class="tab col s4"><a href="#test1">Accident Description</a></li>
                <li class="tab col s4"><a href="#test2">Involved Party</a></li>
                <li class="tab col s4 "><a href="#test3">Repair Estimates</a></li>

            </ul>
           
        </div>
        <div id="test1" class="col s12">
            <div class="card z-depth-1 hoverable">
                <div class="card-content ">
                    <span class="card-title center-align">Accident Description</span>
                    <p class="red-text center-align">
                        Please Fill out Appropriately
                    </p>
                </div>
                <div class="card-action">
                    <div class="row">

                        <div class="input-field col l6 m6 s12">
                            <input id="UserPlate" name="UserPlate" type="text" class="validate" data-length="7">
                            <label class="active" for="UserPlate" data-error="Atmost 7 Characters">My License Plate Number</label>
                        </div>

                        <div class="col l6 m6 s12">
                            
                            <input type="date" class="datepicker" name="RDate" />
                            <label>Date of Accident</label>
                        </div>

                    </div>

                    <div class="row">
                        <div class="input-field col l4 m4 s12">
                            <div class="input-field">
                                <input id="RAddress" name="RAddress" type="text" class="validate">
                                <label class="active" for="RAddress">Accident Address</label>
                            </div>

                        </div>

                        <div class="input-field col l4 m4 s12">
                            <div class="input-field">
                                <input id="RCity" name="RCity" type="text" class="validate">
                                <label class="active" for="RCity">Accident City</label>
                            </div>
                        </div>
                        <div class="input-field col l4 m4 s12">
                            <div class="input-field">
                                <input id="RZip" name="RZip" type="number" class="validate" data-length="5">
                                <label class="active" for="RZip" data-error="Please Enter 5 Numbers">Accident Zip</label>
                            </div>
                        </div>
                    </div>

                    <div class="input-field">
                        <textarea id="RDesc" class="materialize-textarea" name="RDesc"></textarea>
                        <label for="RDesc" name="RDesc">Accident Description</label>
                    </div>


                    <div class="row">


                        <div class="file-field input-field col l6 m6 s12">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="file" id="Image">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" name="file" id="Image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="test2" class="col s12">
            <div class="card  z-depth-1 hoverable">
                <div class="card-content ">
                    <span class="card-title center-align">Involved Party</span>
                    <p class=" red-text center-align">
                        Please Fill out Appropriately
                    </p>
                </div>
                <div class="card-action">
                    <!--Start of 3rd Party Information-->

                    <div class="row">
                        <div class=" col l6 m6 s12">
                            <div class="input-field">
                                <input id="RName" name="RName" type="text" class="validate">
                                <label class="active" for="RName">Name</label>
                            </div>
                        </div>

                        <div class="col l6 m6 s12">
                            <div class="input-field">
                                <input id="RPlate" name="RPlate" type="text" class="validate" data-length="7">
                                <label class="active" for="RPlate" data-error="Atmost 7 Characters">License Plate</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class=" col l6 m6 s12">
                                <div class="input-field">
                                    <input id="RInsurance" name="RInsurance" type="text" class="validate">
                                    <label class="active" for="RInsurance">Insurance</label>
                                </div>
                            </div>

                            <div class="col l6 m6 s12">
                                <div class="input-field">
                                    <input id="RPolNum" name="RPolNum" type="text" class="validate">
                                    <label class="active" for="RPolNum">Policy Number</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="test3" class="col s12">
            <div class="card z-depth-1 hoverable">
                <div class="card-content ">
                    <span class="card-title center-align">Repair Estimates</span>
                    <p class="red-text center-align">
                        Please Fill out Appropriately
                    </p>
                </div>
                <div class="card-action">
                    <!--Repair Estimates-->
                    <div class="input-field">
                        <input id="RShop" name="RShop" type="text" class="validate">
                        <label class="active" for="RShop">Repair Shop Name</label>
                    </div>

                    <div class="row">
                        <div class="col l6 m6 s12">
                            <div class="input-field">
                                <input id="RMin" name="RMin" type="number" class="validate">
                                <label class="active" for="RMin">Minimum Estimate</label>
                            </div>
                        </div>
                        <div class="col l6 m6 s12">
                            <div class="input-field">
                                <input id="RMax" name="RMax" type="number" class="validate">
                                <label class="active" for="RMax">Maximum Estimate</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="center-align">
                <button class="btn waves-effect waves-light black " type="Reset" value="Reset" name="action" style="right: 20px;">Reset</button>

                <button class="btn waves-effect waves-light black " type="Submit" value="Submit" name="action">Send</button>
            </div>
        </div>

    </div>

    
</form>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
