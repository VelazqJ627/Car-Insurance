@model CarInsurance.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class=" row valign-wrapper">
    <div class="col s6 offset-s4 valign">
        <div class="card-panel hoverable center-align" style="width: 548px;">
            <div class="card-image">
                <img class="responsive-img" src="https://cdn-daytripfinder.netdna-ssl.com/wp-content/uploads/2016/07/happy-family-in-the-car-aubann.jpg">
            </div>
            <div class="card-content">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
